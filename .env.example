# ==============================================
# CONFIGURAÇÕES GERAIS DA APLICAÇÃO
# ==============================================
DEBUG=False
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,.boomerangue.me
CSRF_TRUSTED_ORIGINS=https://*.boomerangue.me,http://localhost

# ==============================================
# BANCO DE DADOS PRINCIPAL
# ==============================================
DB_ENGINE=django.db.backends.mysql
DB_NAME=boomeranguev4
DB_USER=bmm_normal
DB_PASSWORD=your_database_password_here
DB_HOST=db
DB_PORT=3306
DB_ROOT_PASSWORD=root_password_change_me

# ==============================================
# BANCO DE DADOS PIX (Secundário)
# ==============================================
PIX_DB_NAME=boomeranguepixv4
PIX_DB_USER=bmm_normal
PIX_DB_PASSWORD=your_pix_database_password_here
PIX_DB_HOST=db
PIX_DB_PORT=3306

# ==============================================
# REDIS
# ==============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Configuração de cache
CACHE_BACKEND=django_redis.cache.RedisCache
CACHE_LOCATION=redis://redis:6379/1

# Django Channels
CHANNEL_LAYERS_BACKEND=channels_redis.core.RedisChannelLayer
CHANNEL_LAYERS_HOST=redis
CHANNEL_LAYERS_PORT=6379

# ==============================================
# RABBITMQ
# ==============================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=bmm
RABBITMQ_PASSWORD=bmm_password
RABBITMQ_VHOST=/

# ==============================================
# CELERY
# ==============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=America/Sao_Paulo

# ==============================================
# AWS / WASABI S3 STORAGE
# ==============================================
USE_S3=False
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_bucket_name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=
AWS_S3_ENDPOINT_URL=https://s3.wasabisys.com

# ==============================================
# OPENAI API
# ==============================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000

# ==============================================
# GOOGLE CLOUD SERVICES
# ==============================================
GOOGLE_CLOUD_VISION_API_KEY=your_google_vision_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# ==============================================
# N8N INTEGRATION
# ==============================================
N8N_API_URL=https://your-n8n-instance.com
N8N_API_KEY=your_n8n_api_key

# ==============================================
# SENDPULSE (Email/SMS Marketing)
# ==============================================
SENDPULSE_API_ID=your_sendpulse_api_id
SENDPULSE_API_SECRET=your_sendpulse_api_secret

# ==============================================
# WHATSAPP / BOT CONFIGURATION
# ==============================================
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_TOKEN=your_whatsapp_token
BOT_WEBHOOK_URL=https://your-domain.com/webhook

# ==============================================
# PAYMENT GATEWAYS
# ==============================================
# PIX
PIX_API_KEY=your_pix_api_key
PIX_CERTIFICATE_PATH=/path/to/certificate.pem
PIX_PRIVATE_KEY_PATH=/path/to/private_key.pem

# Outros Gateways
PAYMENT_GATEWAY_API_KEY=your_gateway_api_key
PAYMENT_GATEWAY_SECRET=your_gateway_secret

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=noreply@boomerangue.me

# ==============================================
# INTERNACIONALIZAÇÃO
# ==============================================
LANGUAGE_CODE=pt-br
TIME_ZONE=America/Sao_Paulo
USE_I18N=True
USE_L10N=True
USE_TZ=True

# ==============================================
# SEGURANÇA
# ==============================================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# CORS
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://boomerangue.me,https://www.boomerangue.me

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=INFO
LOG_FILE_PATH=/home/app/logs/django.log

# ==============================================
# ARQUIVOS ESTÁTICOS E MEDIA
# ==============================================
STATIC_URL=/static/
STATIC_ROOT=/home/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/home/app/media

# ==============================================
# HUGGING FACE (AI/ML Models)
# ==============================================
HUGGINGFACE_API_KEY=your_huggingface_api_key
HUGGINGFACE_MODEL=bert-base-multilingual-cased

# ==============================================
# SENTRY (Error Tracking - Opcional)
# ==============================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# ==============================================
# OUTRAS CONFIGURAÇÕES
# ==============================================
# Número máximo de upload de arquivo (em MB)
MAX_UPLOAD_SIZE=10

# Timeout para requisições externas (em segundos)
REQUEST_TIMEOUT=30

# Ativar modo de manutenção
MAINTENANCE_MODE=False
